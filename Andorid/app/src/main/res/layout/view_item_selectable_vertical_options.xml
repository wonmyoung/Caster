<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp280"
    android:layout_marginLeft="@dimen/dp15"
    android:layout_marginRight="@dimen/dp15"
    android:layout_marginTop="@dimen/dp5"
    android:layout_marginBottom="@dimen/dp5"
    card_view:cardCornerRadius="@dimen/dp15"
    card_view:cardElevation="@dimen/dp5"
    card_view:cardMaxElevation="0dp"
    card_view:contentPaddingTop="@dimen/dp15"
    card_view:contentPaddingLeft="@dimen/dp15"
    card_view:contentPaddingRight="@dimen/dp15"
    card_view:contentPaddingBottom="@dimen/dp15">

    <TextView
        android:id="@+id/insertItemTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/dp14"
        android:textStyle="bold"
        android:textColor="@color/mainColor0"/>

    <com.casting.view.insert.InsertOptionsVertical
        android:id="@+id/insertOptionsVertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp220"
        android:layout_marginTop="@dimen/dp30"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="@dimen/dp5">

        <TextView
            android:id="@+id/insertItemText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="@dimen/dp30"
            android:text=""
            android:textColor="@color/color_black80"/>

        <TextView
            android:id="@+id/insertItemTextPrefix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp12"
            android:text=""
            android:layout_marginLeft="@dimen/dp5"
            android:textColor="@color/color_black50"/>

    </LinearLayout>

</android.support.v7.widget.CardView>