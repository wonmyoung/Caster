<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dp15"
    android:paddingLeft="@dimen/dp15">

    <com.casting.commonmodule.view.CircleImageView
        android:id="@+id/userImage"
        android:layout_width="@dimen/dp45"
        android:layout_height="@dimen/dp45"
        android:background="@color/mainColor0"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/userNickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="조감독"
            android:textColor="@color/color_black"
            android:textSize="@dimen/dp20"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/userGrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:background="@drawable/shape_main_color_round10"
            android:paddingBottom="@dimen/dp2"
            android:paddingLeft="@dimen/dp10"
            android:paddingRight="@dimen/dp10"
            android:paddingTop="@dimen/dp2"
            android:text="골드"
            android:textColor="@color/color_white"
            android:textSize="@dimen/dp14" />

    </LinearLayout>

    <TextView
        android:id="@+id/userIdView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp5"
        android:text="Mr.cho"
        android:textColor="@color/color_7c7c7c"
        android:textSize="@dimen/dp12" />

</LinearLayout>