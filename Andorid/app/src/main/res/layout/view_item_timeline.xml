<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp180"
    android:layout_marginBottom="@dimen/dp5"
    android:layout_marginLeft="@dimen/dp15"
    android:layout_marginRight="@dimen/dp15"
    android:layout_marginTop="@dimen/dp5"
    android:orientation="vertical"
    card_view:cardCornerRadius="@dimen/dp15"
    card_view:cardElevation="@dimen/dp5"
    card_view:cardMaxElevation="0dp"
    card_view:contentPaddingBottom="@dimen/dp5"
    card_view:contentPaddingLeft="@dimen/dp15"
    card_view:contentPaddingRight="@dimen/dp15"
    card_view:contentPaddingTop="@dimen/dp15">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp150"
        android:orientation="horizontal">

        <com.casting.commonmodule.view.CircleImageView
            android:id="@+id/userImage"
            android:layout_width="@dimen/dp45"
            android:layout_height="@dimen/dp45"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp45"
                android:layout_marginLeft="@dimen/dp10">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/userNickName"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLength="25"
                        android:maxLines="1"
                        android:text="조감독"
                        android:textColor="@color/color_black"
                        android:textSize="@dimen/dp14" />

                    <TextView
                        android:id="@+id/userId"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp10"
                        android:maxLength="25"
                        android:maxLines="1"
                        android:text="Mr cho"
                        android:textColor="@color/color_666666"
                        android:textSize="@dimen/dp12" />

                </LinearLayout>

                <TextView
                    android:id="@+id/userTimeLineTime"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right|top"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/color_adadad"
                    android:textSize="@dimen/dp12" />

            </FrameLayout>

            <TextView
                android:id="@+id/userTimeLine"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp75"
                android:layout_marginLeft="@dimen/dp10"
                android:maxLines="4"
                android:text="timeline timeline timeline timeline timeline timeline timeline timeline timeline timeline timeline timeline timeline timeline timeline timeline"
                android:textColor="@color/color_666666" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp25"
                android:gravity="center_vertical|right"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/replyThisTimeLine"
                    android:layout_width="@dimen/dp25"
                    android:layout_height="@dimen/dp25"
                    android:layout_marginRight="@dimen/dp10" />

                <Button
                    android:id="@+id/shareTimeLineButton"
                    android:layout_width="@dimen/dp25"
                    android:layout_height="@dimen/dp25" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>