<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp50"
    android:weightSum="100"
    android:paddingLeft="@dimen/dp15">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="60"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rankingIndex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/color_7c7c7c"/>

        <com.casting.commonmodule.view.CircleImageView
            android:id="@+id/rankingUserImage"
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp40"
            android:layout_marginLeft="@dimen/dp10"/>

        <TextView
            android:id="@+id/rankingName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginLeft="@dimen/dp10"
            android:textColor="@color/color_7c7c7c"/>

        <TextView
            android:id="@+id/userGrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:paddingLeft="@dimen/dp10"
            android:paddingRight="@dimen/dp10"
            android:paddingTop="@dimen/dp2"
            android:paddingBottom="@dimen/dp2"
            android:textSize="@dimen/dp12"
            android:layout_marginLeft="@dimen/dp10"
            android:gravity="center"
            android:textColor="@color/color_white"
            android:background="@drawable/shape_main_color_round5"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="40"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical|right">

        <TextView
            android:id="@+id/userCastCorrectRate"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text=""
            android:textSize="@dimen/dp12"
            android:textColor="@color/mainColor0"/>

        <TextView
            android:id="@+id/userCash"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text=""
            android:textSize="@dimen/dp12"
            android:textColor="@color/mainColor0"/>

    </LinearLayout>

</LinearLayout>