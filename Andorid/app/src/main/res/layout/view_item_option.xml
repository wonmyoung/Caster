<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/color_transparent">

    <View
        android:layout_marginTop="@dimen/dp5"
        android:id="@+id/circlePoint"
        android:layout_width="@dimen/dp20"
        android:layout_height="@dimen/dp20"
        android:background="@drawable/selector_main_color_circle_and_circle"/>

    <TextView
        android:id="@+id/circlePointMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/dp12"
        android:gravity="center"
        android:maxWidth="@dimen/dp80"
        android:layout_marginTop="@dimen/dp10"
        android:textColor="@color/color_505050"
        android:maxLines="3"
        android:background="@color/color_white"
        android:text="text Message text Message  text Message text Message text Message text Message"/>

</LinearLayout>