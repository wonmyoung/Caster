<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:paddingTop="@dimen/dp60"
    android:paddingLeft="@dimen/dp30">

    <com.casting.commonmodule.view.CircleImageView
        android:id="@+id/userImage"
        android:layout_width="@dimen/dp70"
        android:layout_height="@dimen/dp70"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/userNickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="조감독"
            android:textSize="@dimen/dp24"
            android:textStyle="bold"
            android:textColor="@color/color_black"/>

        <TextView
            android:id="@+id/userGrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_white"
            android:text="골드"
            android:layout_marginLeft="@dimen/dp10"
            android:textSize="@dimen/dp16"
            android:paddingLeft="@dimen/dp10"
            android:paddingTop="@dimen/dp2"
            android:paddingBottom="@dimen/dp2"
            android:paddingRight="@dimen/dp10"
            android:background="@drawable/shape_main_color_round10"/>

    </LinearLayout>

    <TextView
        android:id="@+id/userIdView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp15"
        android:textSize="@dimen/dp16"
        android:textColor="@color/color_7c7c7c"
        android:text="Mr.cho"/>

    <LinearLayout
        android:id="@+id/leftMenuButton1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp60"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp15"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp40"
            android:background="@drawable/shape_main_color_round15"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp18"
            android:layout_marginLeft="@dimen/dp15"
            android:text="프로필"
            android:textColor="@color/color_black"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/leftMenuButton2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp60"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp15"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp40"
            android:background="@drawable/shape_main_color_round15"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp18"
            android:layout_marginLeft="@dimen/dp15"
            android:text="전체 캐스트 순위"
            android:textColor="@color/color_black"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/leftMenuButton3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp60"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp15"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp40"
            android:background="@drawable/shape_main_color_round15"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp18"
            android:layout_marginLeft="@dimen/dp15"
            android:text="설정"
            android:textColor="@color/color_black"/>

    </LinearLayout>

</LinearLayout>