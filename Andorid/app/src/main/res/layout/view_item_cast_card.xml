<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp250"
    android:layout_height="@dimen/dp350"
    android:orientation="vertical"
    card_view:cardCornerRadius="@dimen/dp15"
    card_view:cardElevation="@dimen/dp5"
    card_view:cardMaxElevation="0dp">

    <ImageView
        android:id="@+id/castCardBack"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp350" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp30"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp10"
        android:paddingLeft="@dimen/dp10"
        android:paddingRight="@dimen/dp10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/castTag1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp12"
            android:text="비트코인"
            android:paddingLeft="@dimen/dp5"
            android:paddingRight="@dimen/dp5"
            android:paddingTop="@dimen/dp2"
            android:paddingBottom="@dimen/dp2"
            android:background="@drawable/shape_main_color_round5"
            android:textColor="@color/color_white"/>

        <TextView
            android:id="@+id/castTag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp12"
            android:text="1,0000캡"
            android:layout_marginLeft="@dimen/dp10"
            android:paddingLeft="@dimen/dp5"
            android:paddingRight="@dimen/dp5"
            android:paddingTop="@dimen/dp2"
            android:paddingBottom="@dimen/dp2"
            android:background="@drawable/shape_main_color_round5"
            android:textColor="@color/color_white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical|right">

            <TextView
                android:id="@+id/castTopText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp11"
                android:text="종료"
                android:layout_marginRight="@dimen/dp10"
                android:textColor="@color/color_white"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/castCardTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/dp15"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:text="비트코인의 7월25일의 자정가격은 얼마일까요 ?"
        android:textColor="@color/color_white"
        android:textSize="@dimen/dp24" />

</android.support.v7.widget.CardView>