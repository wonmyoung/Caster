<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dp250"
    android:layout_height="@dimen/dp350"
    android:orientation="vertical"
    card_view:cardCornerRadius="@dimen/dp15"
    card_view:cardElevation="@dimen/dp5"
    card_view:cardMaxElevation="0dp">

    <ImageView
        android:id="@+id/castCardBack"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp350" />

    <TextView
        android:id="@+id/castCardTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/dp15"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:text="비트코인의 7월25일의 자정가격은 얼마일까요 ?"
        android:textColor="@color/color_white"
        android:textSize="@dimen/dp40" />

</android.support.v7.widget.CardView>