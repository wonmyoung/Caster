<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp130"
    android:layout_marginBottom="@dimen/dp5"
    android:layout_marginLeft="@dimen/dp15"
    android:layout_marginRight="@dimen/dp15"
    android:layout_marginTop="@dimen/dp5"
    android:orientation="vertical"
    card_view:cardCornerRadius="@dimen/dp15"
    card_view:cardElevation="@dimen/dp5"
    card_view:cardMaxElevation="0dp"
    card_view:contentPaddingBottom="@dimen/dp5"
    card_view:contentPaddingLeft="@dimen/dp15"
    card_view:contentPaddingRight="@dimen/dp15"
    card_view:contentPaddingTop="@dimen/dp15">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="100">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="32">

            <TextView
                android:id="@+id/insertItemTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="@dimen/dp16"
                android:textColor="@color/mainColor0"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/insertItemBottomTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12,500"
                android:textStyle="bold"
                android:textSize="@dimen/dp20"
                android:layout_marginTop="@dimen/dp5"
                android:textColor="@color/color_999999"/>

        </LinearLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="34">

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieChart1"
                android:layout_width="@dimen/dp95"
                android:layout_height="@dimen/dp95"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/pieChartName1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp11"
                android:layout_gravity="center"
                android:text="pieChartName"
                android:textColor="@color/color_999999"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="34">

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieChart2"
                android:layout_width="@dimen/dp95"
                android:layout_height="@dimen/dp95"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/pieChartName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp11"
                android:layout_gravity="center"
                android:text="pieChartName"
                android:textColor="@color/color_999999"/>

        </FrameLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>