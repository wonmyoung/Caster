<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp220"
    android:orientation="vertical"
    android:layout_marginLeft="@dimen/dp15"
    android:layout_marginRight="@dimen/dp15"
    android:layout_marginTop="@dimen/dp10"
    android:layout_marginBottom="@dimen/dp10"
    card_view:cardCornerRadius="@dimen/dp15"
    card_view:cardElevation="@dimen/dp5"
    card_view:cardMaxElevation="0dp">

    <ImageView
        android:id="@+id/castCardBack"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp220"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp30"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dp10"
        android:paddingLeft="@dimen/dp10"
        android:paddingRight="@dimen/dp10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/castTag1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp12"
            android:text=""
            android:paddingLeft="@dimen/dp5"
            android:paddingRight="@dimen/dp5"
            android:paddingTop="@dimen/dp2"
            android:paddingBottom="@dimen/dp2"
            android:background="@drawable/shape_main_color_round5"
            android:textColor="@color/color_white"/>

        <TextView
            android:id="@+id/castTag2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp12"
            android:text=""
            android:layout_marginLeft="@dimen/dp10"
            android:paddingLeft="@dimen/dp5"
            android:paddingRight="@dimen/dp5"
            android:paddingTop="@dimen/dp2"
            android:paddingBottom="@dimen/dp2"
            android:background="@drawable/shape_main_color_round5"
            android:textColor="@color/color_white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical|right">

            <TextView
                android:id="@+id/castTopText1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp11"
                android:text=""
                android:layout_marginRight="@dimen/dp10"
                android:textColor="@color/color_white"/>

            <TextView
                android:id="@+id/castTopText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp11"
                android:text=""
                android:layout_marginRight="@dimen/dp10"
                android:textColor="@color/color_white"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/dp15"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:orientation="vertical">

        <TextView
            android:id="@+id/castCardTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/color_white"
            android:textSize="@dimen/dp24" />

        <TextView
            android:id="@+id/castCardDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp10"
            android:text="디스크립션 가이드 입니다 .디스크립션 가이드 입니다 .디스크립션 가이드 입니다 .디스크립션 가이드 입니다 .디스크립션 가이드 입니다 .디스크립션 가이드 입니다 .디스크립션 가이드 입니다 ."
            android:textColor="@color/color_white"
            android:textSize="@dimen/dp14" />

    </LinearLayout>

</android.support.v7.widget.CardView>