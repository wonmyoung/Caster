<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="100"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/dp15"
            android:paddingTop="@dimen/dp20"
            android:orientation="vertical">

            <com.casting.commonmodule.view.CircleImageView
                android:id="@+id/userImage"
                android:layout_width="@dimen/dp45"
                android:layout_height="@dimen/dp45"
                android:background="@color/mainColor0"
                android:scaleType="centerCrop"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp10"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/userNickName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="조감독"
                    android:textSize="@dimen/dp20"
                    android:textStyle="bold"
                    android:textColor="@color/color_black"/>

                <TextView
                    android:id="@+id/userGrade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_white"
                    android:text="골드"
                    android:layout_marginLeft="@dimen/dp10"
                    android:textSize="@dimen/dp14"
                    android:paddingLeft="@dimen/dp10"
                    android:paddingTop="@dimen/dp2"
                    android:paddingBottom="@dimen/dp2"
                    android:paddingRight="@dimen/dp10"
                    android:background="@drawable/shape_main_color_round10"/>

            </LinearLayout>

            <TextView
                android:id="@+id/userIdView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:textSize="@dimen/dp12"
                android:textColor="@color/color_7c7c7c"
                android:text="Mr.cho"/>

            <TextView
                android:id="@+id/userDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:textSize="@dimen/dp12"
                android:textColor="@color/color_7c7c7c"
                android:text="Professional MD / Amateur musician"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp10"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/dp14"
                        android:text="text"
                        android:layout_weight="1"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/dp14"
                        android:text="text"
                        android:layout_weight="1"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/dp14"
                        android:text="text"
                        android:layout_weight="1"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/dp14"
                        android:text="text"
                        android:layout_weight="1"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/dp14"
                        android:text="text"
                        android:layout_weight="1"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textSize="@dimen/dp14"
                        android:text="text"
                        android:layout_weight="1"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:layout_width="@dimen/dp80"
            android:layout_height="@dimen/dp25"
            android:layout_gravity="right|top"
            android:text="프로필 수정하기"
            android:textColor="@color/mainColor0"
            android:textSize="@dimen/dp10"
            android:layout_marginTop="@dimen/dp45"
            android:layout_marginRight="@dimen/dp20"
            android:background="@drawable/shape_main_color_nofill_round10"/>

    </FrameLayout>

    <android.support.design.widget.TabLayout
        style="@style/CustomTabLayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        app:tabBackground="@drawable/selector_tab_indicator"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/mainColor0"
        app:tabIndicatorHeight="@dimen/dp3"
        app:tabMaxWidth="0dp"
        app:tabMode="fixed"
        app:tabTextAppearance="@style/CustomTabTexStyle"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="52"/>

</LinearLayout>